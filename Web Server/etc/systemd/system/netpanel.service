[Unit]
Description=NetPanel - Network Control Panel
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/netpanel
EnvironmentFile=/etc/netpanel.env
ExecStart=/opt/netpanel/venv/bin/python /opt/netpanel/app.py
Restart=on-failure
RestartSec=2
User=root

[Install]
WantedBy=multi-user.target
